@model RplpAvecBD.Model.Course;

@{
    ViewData["Title"] = "Professeur";
    List<string> listeEtudiant = ViewBag.listeEtudiant;
}

<div class="text-left">
    <br />
    <h2>Assignments<strong style="font-size:20px;"> (Travaux)</strong></h2>
    <hr />
    @using (Html.BeginForm())
    {
        <table>
            <thead>
                <tr>
                    <th>
                        <h6 style="width:270px;">Sélectionner un cours</h6>
                    </th>
                    <th style="width:10px;"></th>
                    <th>
                        <a href="#"><img src="~/img/icon_refresh_19x19_v2.png" title="Refresh" alt="Refresh" /></a>
                    </th>
                    <th style="width:50px;"></th>
                    <th>
                        <a class="text-gris" asp-controller="Teacher" asp-action="AideSelectionnerCours"> Besoin d'aide ?</a>
                    </th>
                    <th style="width:30px;"></th>
                </tr>
            </thead>
            <tbody>
                <tr style="height: 15px;"></tr>
                <tr>
                    <td>
                        @using (Html.BeginForm("Teacher", "index", FormMethod.Post))
                        {
                            @Html.DropDownListFor(m => m.idCoursChoisi, new SelectList(@ViewBag.listeCours, "id", "name"), "-- Selectionner un cours --", new { @class = "form-control", onchange = "this.form.submit()" })
                        }
                    </td>
                    <td></td>
                    <td></td>
                    <td></td>

                    @if (@listeEtudiant != null && @listeEtudiant.Count > 0)
                    {
                        <td>
                            <input type="submit" class="btn btn-info" id="btnModifierListeEtudiants" value="Modifier la liste des étudiants" />
                        </td>
                        <td>&nbsp</td>
                        <td>
                            <input type="submit" class="btn btn-success" id="btnAjouterTravail" value="Ajouter un travail" asp-controller="Teacher" asp-action="AjouterTravail" />
                        </td>
                    }
                    else if (@listeEtudiant != null && @listeEtudiant.Count == 0)
                    {
                        <td>
                            <input type="submit" class="btn btn-info" id="btnAjouterListeEtudiants" value="Ajouter la liste des étudiants" />
                        </td>
                    }
                </tr>
                <tr>
                    <td>
                        @Html.ValidationMessageFor(m => m.idCoursChoisi, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </tbody>
        </table>
        <hr />
    }
    <br />
    <br />
    <h6>Travaux existentes dans le cours <strong>nom du cours</strong></h6>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>
                    <h6>Nom</h6>
                </th>
                <th>
                    <h6>No. travaux remis</h6>
                </th>
                <th>
                    <h6>No. travaux manquants</h6>
                </th>
                <th>
                    <h6>Date</h6>
                </th>
                <th>
                    <h6>Créé sur CodePost</h6>
                </th>
                <th>
                    <h6>Action</h6>
                </th>
                <th></th>
            </tr>
        </thead>
