@model RplpAvecBD.Model.Unclaim

@{
    ViewData["Title"] = "Étudiant";
}

<div class="text-left">
    <div class="text-left">
        <br />
        <table>
            <thead>
                <tr>
                    <th style="width:195px;"></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <h2>Unclaim</h2>
                    </td>
                    <td>
                        <p class="text-gris" style="margin-top:15px;"><a asp-controller="Student" asp-action="GuideCodePostEtudiant">Voir le guide</a> pour vérifier comment créer votre compte sur le site Web CodePost !</p>
                    </td>
                </tr>
            </tbody>
        </table>
        <hr />

        @using (Html.BeginForm())
        {
            <table>
                <thead>
                    <tr>
                        <th>
                            <h6 style="width:220px;">Professeur :</h6>
                        </th>
                        <th style="width:10px;"></th>
                        <th>
                            <h6 style="width:220px;">Code étudiant :</h6>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DropDownListFor(m => m.idProfesseur, new SelectList(@ViewBag.listeProfesseurs, "id", "nom"), "-- Sélectionner un professeur --", new { @class = "form-control" })
                        </td>
                        <td style="width:10px;"></td>
                        <td>
                            @Html.TextBoxFor(m => m.codeEtudiant, new { placeholder = "000000", @class = "form-control" })
                        </td>
                        <td style="width:10px;"></td>
                        <td>
                            <input type="submit" class="btn btn-success" value="unclaim" />
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.ValidationMessageFor(m => m.idProfesseur, "", new { @class = "text-danger" })</td>
                        <td></td>
                        <td>@Html.ValidationMessageFor(m => m.codeEtudiant, "", new { @class = "text-danger" })</td>
                    </tr>
                </tbody>
            </table>
        }
    </div>
    <hr />
    <br />
    <div >
        <img src="~/img/unclaim.gif" />
    </div>
</div>

