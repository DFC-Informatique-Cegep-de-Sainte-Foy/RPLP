<form id="ajouterOrgForm">
    <div class="titlePartial">
    <h2 >Créer une organisation</H2>
    </div>

    <div class="form-group">
        <label for="InputOrgNameAjouterOrg">Nom de l'organisation</label>
        <input type="text" class="form-control" id="InputOrgNameAjouterOrg">
    </div>

  <input type="button" class="btn-lg btn-success titlePartial" onclick="ajouterOrg.verifyDataThenCreate()" value="Créer">
  <input type="button" class="btn-lg btn-primary titlePartial" onclick="ajouterOrg.refreshForm()" value=" Rafraîchir le formulaire">
</form>


<script type="text/javascript">

    var ajouterOrg = {}

    ajouterOrg.refreshForm = function ()
    {
       document.getElementById("ajouterOrgForm").reset();
    }

    ajouterOrg.verifyDataThenCreate = function()
    {
        var orgName = document.getElementById("InputOrgNameAjouterOrg").value ;

        if(orgName == "" )
        {
            alert("Veulliez remplir le champ vide");
        } else {
            ajouterOrg.createNewOrg(orgName);
        }
    }

    ajouterOrg.createNewOrg = function(orgName)
    {
        var ajaxURL = '/RPLP/POSTUpsertOrg';

        $.post(ajaxURL,{
           Id: 0,
           OrgName: orgName
        },
        function(data, status){
            alert("Data: " + data + "\nStatus: " + status);
        });
    }

</script>

