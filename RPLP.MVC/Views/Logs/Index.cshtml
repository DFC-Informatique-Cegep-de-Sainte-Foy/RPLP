@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Data;
@model DataTable

@*
	//Commentaire
*@

<div>
    <hr/>
    <table border="0" cellpadding="0" cellspacing="0">
        <tr>
            @foreach (DataColumn dc in Model.Columns)
            {
                <th>@dc.ColumnName</th>
            }
        </tr>
        @foreach (DataRow dr in Model.Rows)
        {
            <tr>
                @foreach (DataColumn dc in Model.Columns)
                {
                    <td>@dr[dc.ColumnName]</td>
                }
            </tr>
        }
    </table>
</div>
