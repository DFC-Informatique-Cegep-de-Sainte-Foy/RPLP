@{
    ViewData["Title"] = "Upload vers Codepost";
}

<h1 class="text-white">Professeur</h1>

<div class="text-center">
    <form asp-controller="Home" asp-action="Teacher" enctype="multipart/form-data" method="post">

        <div class="btn-info d-flex" style="padding:8px">
            <input type="file" name="file" />
        </div>
        <br /><br />
        <input type="submit" class="col-sm-2 btn btn-info" id="btnUpload" value="Upload" onclick="submit_form()" />
    
    </form>
</div>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success" style="margin-top:20px">
        @ViewBag.Message
    </div>
}